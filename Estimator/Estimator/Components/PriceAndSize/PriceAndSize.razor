@page "/price-and-size"
@using Estimator.Components.PriceAndSize.Footing
@using Estimator.Components.PriceAndSize.Pad
@using Estimator.Data.Entities
@using Microsoft.AspNetCore.Authorization

@attribute [Authorize]
@rendermode InteractiveServer
<h3>Price And Size</h3>

<div class="container my-5">
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="footing-tab" data-bs-toggle="tab" data-bs-target="#footing" type="button" role="tab" aria-controls="footing" aria-selected="true">Footing</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="pad-tab" data-bs-toggle="tab" data-bs-target="#pad" type="button" role="tab" aria-controls="pad" aria-selected="false">Pad</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">Contact</button>
    </li>
  </ul>

  <div class="tab-content mt-3" id="myTabContent">
    <div class="tab-pane fade show active" id="footing" role="tabpanel" aria-labelledby="footing-tab"> 
      <div>
        <FootingPriceAndSizes /> 
      </div>  
      <div class="mt-3">
        <h3 class="mb-3">Reinforcing </h3>
        @if(_sizeSystem == Rebar.SizeSystem.Imperial)
        {

        }
        else 
        {
          <MetricFootingReinforcing />
        }
      </div>   
        
    </div>
    <div class="tab-pane fade" id="pad" role="tabpanel" aria-labelledby="pad-tab">     
      <PadPriceAndSizes />
    </div>
    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
      <h2 class="mb-3">Contact</h2>
      <p class="lead">This is the contact tab content.</p>
      
    </div>
  </div>
</div>


@code {

  private Rebar.SizeSystem _sizeSystem = Rebar.SizeSystem.Metric;

    

}
